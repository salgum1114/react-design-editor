# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.yml]
indent_style = space
indent_size = 2
